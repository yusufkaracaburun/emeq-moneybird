{
    "name": "emeq/moneybird",
    "description": "Laravel package for Moneybird integration with OAuth token management",
    "keywords": [
        "emeq",
        "laravel",
        "moneybird",
        "api",
        "oauth"
    ],
    "homepage": "https://github.com/emeq/moneybird",
    "license": "MIT",
    "authors": [
        {
            "name": "EMEQ",
            "email": "info@emeq.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.19",
        "illuminate/contracts": "^12.0",
        "picqer/moneybird-php-client": "^0.42.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/framework": "^12.25",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Emeq\\Moneybird\\": "src/",
            "Emeq\\Moneybird\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Emeq\\Moneybird\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "post-package-install": [
            "@php -r \"if (file_exists('vendor/autoload.php')) { require 'vendor/autoload.php'; if (class_exists('Illuminate\\Support\\Facades\\Artisan')) { \\Illuminate\\Support\\Facades\\Artisan::call('vendor:publish', ['--tag' => 'moneybird-config', '--force' => false]); \\Illuminate\\Support\\Facades\\Artisan::call('vendor:publish', ['--tag' => 'moneybird-migrations', '--force' => false]); } }\""
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Emeq\\Moneybird\\MoneybirdServiceProvider"
            ],
            "aliases": {
                "Moneybird": "Emeq\\Moneybird\\Facades\\Moneybird"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
